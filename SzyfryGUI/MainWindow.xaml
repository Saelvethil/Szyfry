                        <GradientStop Color="#FF8BFFFA" Offset="0.5"/>
                        <GradientStop Color="#FF326C69" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Margin="2">RailFence</Label>
                <Label Grid.Row="0" Grid.Column="1" Margin="2">Krok(np. 3)</Label>
                <TextBox Grid.Row="0" Grid.Column="2"  Name="railStep" Margin="2">3</TextBox>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
